<% breadcrumb :contact %>
<div id="contact_main">
	<div class="row">
		<div class="col-xs-12">
			<p class="description"><%=raw t(:contact_description) %></p>

			<%= form_with model: contact, data: { turbo: false } do |f| %>

				<% if contact.errors.any? %>
					<div id="error_explanation" class="alert alert-danger" role="alert">
						<button type="button" class="btn-close close" data-bs-dismiss="alert" aria-label="Close"></button>
						<h2><%= pluralize(contact.errors.count, "개의 문제") %>로 진행할 수 없습니다.</h2>
						<ul>
							<% contact.errors.full_messages.each do |msg| %>
								<li>
									<%= msg %>
								</li>
							<% end %>
						</ul>
					</div>
				<% end %>

			<% unless user_signed_in? %>
			<div class="form-group">
				<%= f.label :name %>
				<%= f.text_field :name, :class=>'form-control input-lg', :required=>"required" %>
			</div>
			<div class="form-group">
				<%= f.label :email %>
				<%= f.email_field :email, :class=>'form-control input-lg', :required=>"required" %>
			</div>
			<% end %>
			<div class="form-group">
				<%= f.label :title %>
				<%= f.text_field :title, :class=>'form-control input-lg', :required=>"required" %>
			</div>
			<%= f.fields_for :contact_content do |c| %>
			<div class="form-group">
				<%= c.label :content %>
				<%= c.text_area :content, :class=>'form-control input-lg', :rows=> 7,:required=>"required" %>
			</div>
			<% end %>
				<% if Rails.env.production? %>
					<div class="form-group">
						<div class="cf-turnstile"
								 data-sitekey="<%= ENV['TURNSTILE_SITE_KEY'] %>"
								 data-callback="turnstileSuccess">
						</div>
					</div>
				<% end %>
				<div class="d-grid gap-2">
					<% disabled = Rails.env.production? %>

					<%= f.submit "저장",
											 id: "submit-btn",
											 class: "btn btn-lg btn-primary",
											 disabled: disabled %>
				</div>
			<% end %>
		</div>
	</div>
</div>
<% if Rails.env.production? %>
<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
<script>
	function turnstileSuccess() {
		document.getElementById("submit-btn").disabled = false;
	}
</script>
<% end %>