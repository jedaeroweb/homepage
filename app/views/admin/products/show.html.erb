<section id="show-product" class="col-12">
  <div class="row">
    <%= render :partial => 'layouts/notice', :locals => {  :notice => notice, :alert => alert } %>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <h3 class="card-header"><%=@product.title %></h3>
        <div class="card-body">
          <dl>
            <dt><%= t(:price, scope: [:activerecord, :attributes, :product]) %></dt>
            <dd><%= number_to_currency @product.price %></dd>
            <dt><%= t(:discount, scope: [:activerecord, :attributes, :product]) %></dt>
            <dd><%= number_to_currency @product.discount %></dd>
            <dt><%= t(:created_at, scope: [:activerecord, :attributes, :product]) %></dt>
            <dd><%= I18n.l @product.created_at.to_date, :format => :long %></dd>
            <dt><%= t(:updated_at, scope: [:activerecord, :attributes, :product]) %></dt>
            <dd><%= I18n.l @product.updated_at.to_date, :format => :long %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-xl-6">
      <%= link_to t(:link_list), admin_products_path, class: 'btn btn-secondary' %>
    </div>
    <div class="col-12 col-xl-6 text-right">
      <%= link_to t(:edit), edit_admin_product_path(@product), class: 'btn btn-secondary' %>
      <%= link_to t(:delete), admin_product_path(@product), :method => :delete, :data => { :confirm => t(:delete_cascade_confirm) }, class: 'btn btn-danger' %>
    </div>
  </div>
</section>
