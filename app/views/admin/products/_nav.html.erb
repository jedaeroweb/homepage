<%
    a_class = 'nav-link'
    b_class = 'nav-link'

    if params[:controller] == 'admin/products'
      a_class += ' active'
    end

    if params[:controller] == 'admin/product_categories'
      b_class += ' active'
    end

  %>
  <div class="col-12">
    <nav class="sub-nav">
      <ul class="nav nav-pills">
        <li class="nav-item"><%= link_to t(:product, scope: [:activerecord, :models]), admin_products_path, { :class => a_class } %></li>
          <li class="nav-item"><%= link_to t(:product_category, scope: [:activerecord, :models]), admin_product_categories_path, { :class => b_class } %></li>
      </ul>
    </nav>
  </div>