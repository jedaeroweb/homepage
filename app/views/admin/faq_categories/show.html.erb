<section id="show-faq-category" class="col-12">
  <div class="row">
    <%= render :partial => 'layouts/notice', :locals => {:notice => notice, :alert => alert } %>
  </div>
  <div class="row">
    <div class="col-12">
      <article class="card">
        <h3 class="card-header"><%=@faq_category.title %></h3>
        <div class="card-body">
          <dl>
            <dt><%= t(:faqs_count, scope: [:activerecord, :attributes, :faq_category]) %></dt>
            <dd><%=  @faq_category.faqs_count.to_s + 'ê°œ' %></dd>
            <dt><%= t(:created_at, scope: [:activerecord, :attributes, :faq_category]) %></dt>
            <dd><%= I18n.l @faq_category.created_at.to_date, :format => :long %></dd>
            <dt><%= t(:updated_at, scope: [:activerecord, :attributes, :faq_category]) %></dt>
            <dd><%= I18n.l @faq_category.updated_at.to_date, :format => :long %></dd>
          </dl>
        </div>
      </article>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-xl-6">
      <%= link_to t(:link_list), admin_faq_categories_path, class: 'btn btn-secondary' %>
    </div>
    <div class="col-12 col-xl-6 text-right">
      <%= link_to t(:edit), edit_admin_faq_category_path(@faq_category), class: 'btn btn-secondary' %>
      <%= link_to t(:delete), admin_faq_category_path(@faq_category), :method => :delete, :data => { :confirm => t(:delete_cascade_confirm) }, class: 'btn btn-danger' %>
    </div>
  </div>
</section>
