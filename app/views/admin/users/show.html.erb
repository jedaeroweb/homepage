<section id="show-user" class="col-12">
  <div class="row">
    <%= render :partial => 'layouts/notice', :locals => {  :notice => notice, :alert => alert } %>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card">
        <h3 class="card-header"><%=@user.name %></h3>
        <div class="card-body">
          <dl>
            <dt><%= t(:email, scope: [:activerecord, :attributes, :user]) %></dt>
            <dd><%= @user.email %></dd>
            <dt><%= t(:phone, scope: [:activerecord, :attributes, :user]) %></dt>
            <dd><%= @user.phone %></dd>
            <dt><%= t(:point, scope: [:activerecord, :attributes, :user]) %></dt>
            <dd><%= @user.point %>P</dd>
            <dt><%= t(:created_at, scope: [:activerecord, :attributes, :user]) %></dt>
            <dd><%= I18n.l @user.created_at.to_date, :format => :long %></dd>
            <dt><%= t(:updated_at, scope: [:activerecord, :attributes, :user]) %></dt>
            <dd><%= I18n.l @user.updated_at.to_date, :format => :long %></dd>
          </dl>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-xl-6">
      <%= link_to t(:link_list), admin_users_path, class: 'btn btn-secondary' %>
    </div>
    <div class="col-12 col-xl-6 text-right">
      <%= link_to t(:edit), edit_admin_user_path(@user), class: 'btn btn-secondary' %>
      <%= link_to t(:delete), admin_user_path(@user), :method => :delete, :data => { :confirm => t(:delete_cascade_confirm) }, class: 'btn btn-danger' %>
    </div>
  </div>
</section>
