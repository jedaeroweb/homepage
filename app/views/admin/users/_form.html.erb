<%= form_with(model: [:admin, user], local: true, :html => { :id => "user_form" }) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&times;</a>
      <h2><%= pluralize(user.errors.count, "개의 문제") %>로 진행할 수 없습니다.</h2>
      <ul>
        <% user.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, :class => "form-control", :required => "required" %>
      </div>
      <div class="form-group">
        <%= form.label :phone %>
        <%= form.text_field :phone, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :phone, :class => "form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :birthday %>
        <%= form.date_field :birthday, :class => "form-control" %>
      </div>
    </div>
  </div>
  <%= form.submit :class => "btn btn-primary btn-lg btn-block" %>
<% end %>
